{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "react-app"
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "node": {
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ]
    }
  },
  "rules": {
    "@typescript-eslint/indent": [
      2,
      2
    ],
    "no-console": "off",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "react/jsx-filename-extension": "off",
    "arrow-body-style": "off",
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "no-shadow": "off",
      "@typescript-eslint/no-shadow": ["error"]
  }
}